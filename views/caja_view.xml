<?xml version="1.0" encoding="utf-8"?>
<flectra>

    <!--  search caja   -->
    <record model="ir.ui.view" id="caja_search">
        <field name="name">caja</field>
        <field name="model">epark.caja</field>
        <field name="type">search</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <search string="X">
                <field name="folio" />
                <field name="cajero" />
            </search>
        </field>
    </record>

    <!-- Accion  caja -->

    <record model='ir.actions.act_window' id='caja_actn'>
        <field name='name'>caja</field>
        <field name='res_model'>epark.caja</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
        <field name='help' type='html'>
            <p class='oe_view_nocontent_create'>
			Haga clic aquÃ­ para crear un nuevo registro
		</p>
        </field>
    </record>

    <!--  form caja   -->
    <record model="ir.ui.view" id="caja_form">
        <field name="name">caja</field>
        <field name="model">epark.caja</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="X" version="7.0">
                <header>
                    <button type="object" name="abrir" string="Abrir"/>
                    <button type="object" name="abrir" string="Cerrar"/>
                    <button type="object" name="abrir" string="Faltante"/>
                    <field name="estado" widget="statusbar" />
                </header>
                <sheet>
                    <h1>
                        <field name="folio" />
                    </h1>
                    <group>
                        <group>
                            <field name="cajero" />
                            <field name="hora_cierre" />
                            <field name="total_cobrado" />
                        </group>
                        <group>
                            <field name="hora_apertura" />
                            <field name="fondo_caja" attrs="{'readonly': [('estado', 'in', ['Abierta', 'Faltante'])]}" />
                            <field name="total_dia" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Tickets">
                            <field name="tickets" attrs="{'readonly': [('estado', '!=', 'Abierta')]}"/>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!--  tree caja   -->
    <record model="ir.ui.view" id="caja_tree">
        <field name="name">caja</field>
        <field name="model">epark.caja</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="X">
                <field name="folio" />
                <field name="cajero" />
                <field name="hora_apertura" />
                <field name="hora_cierre" />
                <field name="fondo_caja" />
                <field name="total_cobrado" />
                <field name="total_dia" />
                <field name="estado" />
            </tree>
        </field>
    </record>
</flectra>