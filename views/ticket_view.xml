<?xml version="1.0" encoding="utf-8"?>
<flectra>

    <!--  search ticket   -->
    <record model="ir.ui.view" id="ticket_search">
        <field name="name">ticket</field>
        <field name="model">epark.ticket</field>
        <field name="type">search</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <search string="X">
                <field name="estado" />
                <field name="marca" />
                <field name="modelo" />
                <field name="tipo" />
                <field name="placas" />
                <field name="color" />
                <field name="hora_entrada" />
                <field name="hora_salida" />
                <field name="tiempo" />
                <field name="tarifa" />
                <field name="costo" />
                <field name="folio" />
                <field name="caja_id" />
            </search>
        </field>
    </record>

    <!-- Accion  ticket -->

    <record model='ir.actions.act_window' id='ticket_actn'>
        <field name='name'>ticket</field>
        <field name='res_model'>epark.ticket</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
        <field name='help' type='html'>
            <p class='oe_view_nocontent_create'>
			Haga clic aqu√≠ para crear un nuevo registro
		</p>
        </field>
    </record>

    <!--  form ticket   -->
    <record model="ir.ui.view" id="ticket_form">
        <field name="name">ticket</field>
        <field name="model">epark.ticket</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="X" version="7.0">
                <header>
                    <button type="object" name="salida" string="Salida"/>
                    <button type="object" name="cobra" string="Cobrar"/>
                    <button type="object" name="" string="Extraviado"/>
                    <field name="estado" widget="statusbar" clickable="True"/>
                </header>
                <sheet>
                    <h1></h1>
                    <group>
                        <group>
                            <field name="marca" />
                            <field name="tipo" />
                            <field name="hora_entrada" />
                            <field name="tiempo" />
                            <field name="costo" />
                            <field name="caja_id" />
                        </group>
                        <group>
                            <field name="modelo" />
                            <field name="placas" />
                            <field name="hora_salida" />
                            <field name="tarifa" />
                            <field name="folio" />
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!--  tree ticket   -->
    <record model="ir.ui.view" id="ticket_tree">
        <field name="name">ticket</field>
        <field name="model">epark.ticket</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="X" >
                <field name="estado" />
                <field name="marca" />
                <field name="modelo" />
                <field name="tipo" />
                <field name="placas" />
                <field name="hora_entrada" />
                <field name="hora_salida" />
                <field name="tiempo" />
                <field name="tarifa" />
                <field name="costo" />
                <field name="folio" />
                <field name="caja_id" />
            </tree>
        </field>
    </record>
</flectra>