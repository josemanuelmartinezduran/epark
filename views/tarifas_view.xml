<?xml version="1.0" encoding="utf-8"?>
<flectra>
     <!--  Tarifa Busqueda  -->
     <record model='ir.ui.view' id='tarifa_search'>
          <field name='name'>tarifa.search</field>
          <field name='model'>epark.tarifa</field>
          <field name='type'>search</field>
          <field name='arch' type='xml'>
               <search string='Buscar'>
                    <field name='name' />
               </search>
          </field>
     </record>

     <!-- Accion  Tarifa -->
     <record model='ir.actions.act_window' id='tarifa_actn'>
          <field name='name'>Tarifa</field>
          <field name='res_model'>epark.tarifa</field>
          <field name='view_type'>form</field>
          <field name='view_mode'>tree,form</field>
          <field name='help' type='html'>
               <p class='oe_view_nocontent_create'>
                    Haga clic aquÃ­ para crear un nuevo registro
               </p>
          </field>
     </record>

     <!--  Lista    Tarifa -->
     <record model='ir.ui.view' id='tarifa_view'>
          <field name='name'>tarifa.view</field>
          <field name='model'>epark.tarifa</field>
          <field name='type'>tree</field>
          <field name='priority' eval='16' />
          <field name='arch' type='xml'>
               <tree string='X' editable="bottom">
                    <field name='name' />
                    <field name="valor" />
                    <field name="tolerancia" />
               </tree>
          </field>
     </record>

     <!--  form linea_tarifa   -->
     <record model="ir.ui.view" id="linea_tarifa_form">
          <field name="name">linea_tarifa</field>
          <field name="model">epark.linea_tarifa</field>
          <field name="type">form</field>
          <field name="priority" eval="16" />
          <field name="arch" type="xml">
               <form string="X" version="7.0">
                    <header>
                    </header>
                    <sheet>
                         <h1>
                         </h1>
                         <group>
                              <group>
                                   <field name="dia_semana" />
                                   <field name="costo" />
                              </group>
                              <group>
                                   <field name="horas" />
                              </group>
                         </group>

                    </sheet>
                    <div class="oe_chatter">
                         <field name="message_follower_ids" widget="mail_followers" />
                         <field name="message_ids" widget="mail_thread" />
                    </div>
               </form>
          </field>
     </record>

     <!--  tree linea_tarifa   -->
     <record model="ir.ui.view" id="linea_tarifa_tree">
          <field name="name">linea_tarifa</field>
          <field name="model">epark.linea_tarifa</field>
          <field name="type">tree</field>
          <field name="priority" eval="16" />
          <field name="arch" type="xml">
               <tree string="X">
                    <field name="dia_semana" />
                    <field name="horas" />
                    <field name="costo" />
               </tree>
          </field>
     </record>
</flectra>