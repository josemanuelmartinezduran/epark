<?xml version="1.0" encoding="utf-8"?>
<flectra>

    <!--  search pension   -->
    <record model="ir.ui.view" id="pension_search">
        <field name="name">pension</field>
        <field name="model">epark.pension</field>
        <field name="type">search</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <search string="X">
                <field name="nombre" />
                <field name="inicio" />
                <field name="tarifa" />
                <field name="saldo" />
            </search>
        </field>
    </record>

    <!-- Accion  pension -->

    <record model='ir.actions.act_window' id='pension_actn'>
        <field name='name'>pension</field>
        <field name='res_model'>epark.pension</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>tree,form</field>
        <field name='help' type='html'>
            <p class='oe_view_nocontent_create'>
			Haga clic aqu√≠ para crear un nuevo registro
		</p>
        </field>
    </record>

    <!--  form pension   -->
    <record model="ir.ui.view" id="pension_form">
        <field name="name">pension</field>
        <field name="model">epark.pension</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="X" version="7.0">
                <header></header>
                <sheet>
                    <h1>
                        <field name="nombre" />
                    </h1>
                    <group>
                        <group>
                            <field name="inicio" />
                            <field name="saldo" />
                        </group>
                        <group>
                            <field name="tarifa" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Pagos">
                            <field name="pagos" />
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!--  tree pension   -->
    <record model="ir.ui.view" id="pension_tree">
        <field name="name">pension</field>
        <field name="model">epark.pension</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="X">
                <field name="nombre" />
                <field name="inicio" />
                <field name="tarifa" />
                <field name="saldo" />
            </tree>
        </field>
    </record>
    <!--  form pago_pension   -->
    <record model="ir.ui.view" id="pago_pension_form">
        <field name="name">pago_pension</field>
        <field name="model">epark.pago_pension</field>
        <field name="type">form</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <form string="X" version="7.0">
                <header></header>
                <sheet>
                    <h1>
                        <field name="fecha" />
                    </h1>
                    <group>
                        <group>
                            <field name="monto" />
                        </group>
                        <group>
                            <field name="pension_id" />
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!--  tree pago_pension   -->
    <record model="ir.ui.view" id="pago_pension_tree">
        <field name="name">pago_pension</field>
        <field name="model">epark.pago_pension</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="X">
                <field name="fecha" />
                <field name="monto" />
                <field name="pension_id" />
            </tree>
        </field>
    </record>
</flectra>